@model List<Xceed_Task.Models.Product>

<link rel="stylesheet" href="~/css/ProductTableStyle.css" asp-append-version="true" />

<div class="row row-cols-1 row-cols-md-3 g-4 mt-3">
    @foreach (var item in Model)
    {
        <div class="col">
            <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none product-card">
                <div class="card h-100 shadow-sm border-0 bg-light">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text mb-1"><strong>Price:</strong> @item.Price.ToString("C")</p>
                        <p class="card-text mb-1"><strong>Category:</strong> @item.Category?.Name</p>
                        <p class="card-text"><strong>Available Until:</strong> @item.StartDate.AddHours(item.DurationInHours).ToString("g")</p>
                    </div>
                </div>
            </a>
        </div>
    }
</div>
